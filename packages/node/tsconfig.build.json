{
    "extends": "../../tsconfig.build.json",
    "include": ["src"],
    "compilerOptions": {
      "esModuleInterop": true,
      "lib": ["es2020"],
      "module": "es2022",
      "preserveConstEnums": true,
      "moduleResolution": "node",
      "strict": true,
      "sourceMap": true,
      "target": "es2022",
      "types": ["node"],
      "outDir": "lib",
      "typeRoots": ["../../node_modules/@types", "./node_modules/@types", "../../types"]
    }
  }